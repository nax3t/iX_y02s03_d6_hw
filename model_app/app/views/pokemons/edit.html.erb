<h1>Editing pokemon</h1>
 
<%= form_for :pokemon, url: pokemon_path(@pokemon), method: :patch do |f| %>
 
  <% if @pokemon.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pokemon.errors.count, "error") %> prohibited
        this pokemon from being saved:
      </h2>
      <ul>
        <% @pokemon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :element_text %><br>
    <%= f.text_area :element_text %>
  </p>
  
  <p>
    <%= f.label :power_level %><br>
    <%= f.text_area :power_level %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', pokemons_path %>